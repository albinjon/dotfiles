# Close window
fn - e : skhd -k "hyper - e"
fn - t : skhd -k "hyper - t"
fn - c : skhd -k "hyper - c"
fn - s : skhd -k "hyper - s"

ctrl + cmd - w [
  "wezterm": skhd -k "cmd - w"
  "arc": skhd -k "cmd + shift - w"
  "finder": skhd -k "cmd - w"
  "*": skhd -k "cmd - w"
]

ctrl + cmd - n [
  "arc": skhd -k "cmd + shift - n"
]

# Close application
ctrl + cmd - q : skhd -k "cmd - q"

cmd - h [
"firefox": :
]
